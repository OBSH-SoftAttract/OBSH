	}

	@Override
	public boolean updateMember(Map<Integer, MemberPo> map) {
		// TODO Auto-generated method stub
		Iterator<Entry<Integer, MemberPo>> iterator = map.entrySet().iterator();
		while(iterator.hasNext()){
			Entry<Integer, MemberPo> entry = iterator.next();
			MemberPo memberPo = entry.getValue();

			sql = "update user set name = "+userPo.getUsername()+"password = "+userPo.getPassword()+"contactinfo = "+userPo.getPhone()+"credit = "+userPo.getCredit()+"isVIP = "+isVIP+"where id = "+userPo.getID();//SQL语句 
			db1 = new JDBCHelper(sql);//创建DBHelper对象  
			try {
				sta = db1.pst.executeUpdate(sql);
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		db1.close();//关闭连接
		return false;
	}

